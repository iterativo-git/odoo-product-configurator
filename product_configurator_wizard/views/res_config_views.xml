<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <field name="group_warning_sale" position="after">
                <label for="id" string="Modify Variant"/>
                <div>
                    <field name="modify_variant" class="oe_inline" widget="upgrade_boolean"/>
                    <label for="modify_variant"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
