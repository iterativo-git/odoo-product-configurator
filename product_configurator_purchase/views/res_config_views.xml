<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_configuration" model="ir.ui.view">
        <field name="name">purchase.res.config.view</field>
        <field name="model">purchase.config.settings</field>
        <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
        <field name="arch" type="xml">
            <field name="group_warning_purchase" position="after">
                <label for="id" string="Modify Variant"/>
                <div>
                    <field name="modify_variant" class="oe_inline" widget="upgrade_boolean"/>
                    <label for="modify_variant"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
